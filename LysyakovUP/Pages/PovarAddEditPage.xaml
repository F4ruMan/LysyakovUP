<Page x:Class="LysyakovUP.Pages.PovarAddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LysyakovUP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="420" d:DesignWidth="700"
      Title="PovarAddEditPage">

    <Grid>
        <Label Content="Имя" HorizontalAlignment="Left" Margin="141,79,0,0" VerticalAlignment="Top" FontWeight="Medium" HorizontalContentAlignment="Right"/>
        <TextBox Name="tbFirstName" HorizontalAlignment="Left" Margin="187,79,0,0" Text="{Binding currentPovar.FirstName}" VerticalAlignment="Top" Width="120"/>
        <Label Content="Фамилия" HorizontalAlignment="Left" Margin="112,115,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right"/>
        <TextBox Name="tbLastName" HorizontalAlignment="Left" Margin="187,115,0,0" Text="{Binding currentPovar.LastName}" VerticalAlignment="Top" Width="120"/>
        <Label Content="Номер телефона" HorizontalAlignment="Left" Margin="64,152,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right"/>
        <TextBox Name="tbPhoneNumber" HorizontalAlignment="Left" Margin="187,151,0,0" Text="{Binding currentPovar.PhoneNumber}" VerticalAlignment="Top" Width="120"/>
        <Label Content="Зарплата" HorizontalAlignment="Left" Margin="111,225,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right"/>
        <TextBox Name="tbSalary" HorizontalAlignment="Left" Margin="187,225,0,0" Text="{Binding currentPovar.Salary}"  VerticalAlignment="Top" Width="120"/>
        <Label Content="Эл. почта" HorizontalAlignment="Left" Margin="112,187,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right"/>
        <TextBox Name="tbEmail" HorizontalAlignment="Left" Margin="187,187,0,0" Text="{Binding currentPovar.Email}" VerticalAlignment="Top" Width="120"/>
        <Button Name="btnSave" Content="Сохранить" HorizontalAlignment="Left" Margin="110,273,0,0" VerticalAlignment="Top" Height="40" Width="72" Click="btnSave_Click" Background="{StaticResource PrimaryColor}"/>
        <Button Name="btnCansel" Content="Отменить" HorizontalAlignment="Left" Margin="187,274,0,0" VerticalAlignment="Top" Height="40" Width="72" Click="btnCansel_Click" Background="{StaticResource PrimaryColor}"/>

    </Grid>
</Page>
