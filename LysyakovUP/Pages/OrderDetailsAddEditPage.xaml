<Page x:Class="LysyakovUP.Pages.OrderDetailsAddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LysyakovUP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderDetailsAddEditPage">

    <Grid>
        <Label Content="ID Заказа" HorizontalAlignment="Left" Margin="112,80,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right"/>
        <TextBox Name="tbOrderID" HorizontalAlignment="Left" Margin="187,79,0,0" Text="{Binding currentOrderDetail.OrderID}" VerticalAlignment="Top" Width="120"/>
        <Label Content="ID Блюда" HorizontalAlignment="Left" Margin="113,115,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right"/>
        <TextBox Name="tbDishID" HorizontalAlignment="Left" Margin="187,115,0,0" Text="{Binding currentOrderDetail.DishID}" VerticalAlignment="Top" Width="120"/>
        <Label Content="Количество" HorizontalAlignment="Left" Margin="112,151,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right"/>
        <TextBox Name="tbQuantity" HorizontalAlignment="Left" Margin="187,151,0,0" Text="{Binding currentOrderDetail.Quantity}" VerticalAlignment="Top" Width="120"/>
        <Button Name="btnSave" Content="Сохранить" HorizontalAlignment="Left" Margin="110,273,0,0" VerticalAlignment="Top" Height="40" Width="72" Click="btnSave_Click" Background="{StaticResource PrimaryColor}"/>
        <Button Name="btnCansel" Content="Отменить" HorizontalAlignment="Left" Margin="187,274,0,0" VerticalAlignment="Top" Height="40" Width="72" Click="btnCansel_Click" Background="{StaticResource PrimaryColor}"/>
    </Grid>
</Page>
