<Page x:Class="LysyakovUP.Pages.DishAddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LysyakovUP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DishAddEditPage">

    <Grid>
        <Label Content="Название" HorizontalAlignment="Left" Margin="110,79,0,0" VerticalAlignment="Top" FontWeight="Medium" HorizontalContentAlignment="Right"/>
        <TextBox Name="tbName" HorizontalAlignment="Left" Margin="187,79,0,0" Text="{Binding currentDish.Name}" VerticalAlignment="Top" Width="120"/>
        <Label Content="Описание" HorizontalAlignment="Left" Margin="112,115,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right"/>
        <TextBox Name="tbDescription" HorizontalAlignment="Left" Margin="187,115,0,0" Text="{Binding currentDish.Description}" VerticalAlignment="Top" Width="120"/>
        <Label Content="ID Категории" HorizontalAlignment="Left" Margin="90,151,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right"/>
        <TextBox Name="tbCategoryID" HorizontalAlignment="Left" Margin="187,151,0,0" Text="{Binding currentDish.CategoryID}" VerticalAlignment="Top" Width="120"/>
        <Label Content="Цена" HorizontalAlignment="Left" Margin="139,188,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right"/>
        <TextBox Name="tbPrice" HorizontalAlignment="Left" Margin="187,187,0,0" Text="{Binding currentDish.Price}" VerticalAlignment="Top" Width="120"/>
        <Label Content="Состав" HorizontalAlignment="Left" Margin="128,225,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right"/>
        <TextBox Name="tbIngrediense" HorizontalAlignment="Left" Margin="187,223,0,0" Text="{Binding currentDish.Ingrediense}" VerticalAlignment="Top" Width="120"/>
        <Button Name="btnSave" Content="Сохранить" HorizontalAlignment="Left" Margin="110,273,0,0" VerticalAlignment="Top" Height="40" Width="72" Click="btnSave_Click" Background="{StaticResource PrimaryColor}"/>
        <Button Name="btnCansel" Content="Отменить" HorizontalAlignment="Left" Margin="187,274,0,0" VerticalAlignment="Top" Height="40" Width="72" Click="btnCansel_Click" Background="{StaticResource PrimaryColor}"/>
    </Grid>
</Page>
